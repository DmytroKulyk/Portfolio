extends ../layout

block title
    title main

block content
    .wrapper
        .maincontent
            section.section.welcome-page
                .sign-in-button Sign in
                .l-main-window

                    .l-page-autorization
                    include ./../sections/user.pug

                    ul.social-icons
                        li.social-icons__item.social-icons__item-vk
